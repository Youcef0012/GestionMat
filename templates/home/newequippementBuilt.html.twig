{% extends('base.html.twig') %}

{% block body %}
    <div class="container">
        <br />
        <h1>Nouveau équippement</h1>

        <form action="/main/NewEq/" method="post">
            <div class="form-group">
                <label for="txtnumserie">Numéro de série</label>

                {{ form_widget(form.serialnumber,{ 'attr': {'class': 'form-control'} }) }}

                <small id="info" class="form-text text-muted">Veuillez introduire le numéro de série
                </small>
            </div>

            <div class="form-check">
                <input type="checkbox"  class="form-check-input" id="checkcat">
                <label class="form-check-label" for="exampleCheck1">Je souhaite ajouter une catégorie</label>
            </div>
            <br />
            <div class="form-group" id="cat">
                <label for="category">Category</label>
                {{ form_widget(form.category,{ 'attr': {'class': 'form-control'} }) }}

            </div>



            <div class="form-group">
                <label for="description">Description</label>
                {{ form_widget(form.description,{ 'attr': {'class': 'form-control'} }) }}

            </div>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>


{% endblock %}

